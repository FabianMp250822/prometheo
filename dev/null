rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to write to specific paths
    // where they might upload their own files.
    // Example: allow write on user-specific folders
    // match /user/{userId}/{allPaths=**} {
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }

    // Allow authenticated users to read and write to common folders
    match /anexos/{procesoId}/{fileName} {
       allow read, write: if request.auth != null;
    }

    match /anotaciones/{procesoId}/{fileName} {
       allow read, write: if request.auth != null;
    }

    match /convenios/{fileName} {
        allow read, write: if request.auth != null;
    }
    
    match /otros/{fileName} {
        allow read, write: if request.auth != null;
    }

    match /soportes/{clienteId}/{fileName} {
        allow read, write: if request.auth != null;
    }
  }
}