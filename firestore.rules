rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /pensionados/{pensionadoId} {
      allow list, get: if request.auth != null;
      allow write: if false; 
    }
    
    match /pensionados/{pensionadoId}/{subcollection}/{docId} {
       allow read, write: if request.auth != null;
    }

    match /procesos/{procesoId} {
      allow read, write: if request.auth != null;
    }
    
    match /procesos/{procesoId}/{subcollection}/{docId} {
       allow read, write: if request.auth != null;
    }
    
    match /procesoscancelados/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /pagosHistorico/{docId} {
      allow read: if request.auth != null;
    }

    match /causante/{docId} {
      allow read: if request.auth != null;
    }

    match /parris1/{parrisId} {
      allow read: if request.auth != null;
    }

    match /tareas/{tareaId} {
        allow read, write: if request.auth != null;
    }
    
    match /nuevosclientes/{clienteId} {
        allow read, write: if request.auth != null;
    }

    match /nuevosclientes/{clienteId}/{subcollection}/{docId} {
        allow read, write: if request.auth != null;
    }
    
    match /grupos/{grupoId} {
        allow read, write: if request.auth != null;
    }
    
    match /provired_notifications/{notificationId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /provired_departments/{departmentId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /provired_municipalities/{municipalityId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
     match /provired_corporations/{corporationId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
     match /provired_offices/{officeId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
     match /documentTemplates/{templateId} {
      allow read, write: if request.auth != null;
    }

    match /{path=**}/anotaciones/{anotacionId} {
      allow read, write: if request.auth != null;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}