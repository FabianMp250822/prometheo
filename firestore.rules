rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla general: por defecto, se necesita estar autenticado para leer o escribir.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regla específica para permitir lecturas en el collectionGroup
    match /procesoscancelados/{docId} {
      allow read: if request.auth != null;
    }

    // --- PROVIRED SYNC ---
    // Allow server-side sync to write to these collections
    match /provired_departments/{docId=**} {
      allow read, write: if true;
    }
    match /provired_municipalities/{docId=**} {
      allow read, write: if true;
    }
    match /provired_corporations/{docId=**} {
      allow read, write: if true;
    }
    match /provired_offices/{docId=**} {
      allow read, write: if true;
    }
    match /provired_notifications/{docId=**} {
      allow read, write: if true;
    }


    // Excepción para la colección 'blog'.
    // Permite que CUALQUIER usuario (autenticado o no) pueda leer y escribir.
    match /blog/{entry=**} {
      allow read, write: if true;
    }

    // Excepción para la colección 'nuevasDemandas'.
    // Permite que CUALQUIER usuario (autenticado o no) pueda leer y escribir.
    match /nuevasDemandas/{demanda=**} {
      allow read, write: if true;
    }
  }
}
