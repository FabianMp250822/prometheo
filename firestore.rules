rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read access to 'pensionados' for any authenticated user.
    // The 'read' rule covers both 'get' (single doc) and 'list' (query) operations.
    match /pensionados/{pensionadoId} {
      allow read: if request.auth != null;
      // Keep write access restricted.
      allow write: if false; 
    }
    
    // Allow read/write access to subcollections of pensionados
    match /pensionados/{pensionadoId}/{subcollection}/{docId} {
       allow read, write: if request.auth != null;
    }

    match /procesos/{procesoId} {
      allow read, write: if request.auth != null;
    }
    
    match /procesos/{procesoId}/{subcollection}/{docId} {
       allow read, write: if request.auth != null;
    }

    // Rules for collection group queries
    match /{path=**}/anotaciones/{anotacionId} {
      allow read: if request.auth != null;
    }
    
    match /procesoscancelados/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // These are created by a backend function
    }

    // Allow authenticated users to manage their own tasks
    match /tareas/{tareaId} {
        allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to manage clients in 'nuevosclientes' collection
    match /nuevosclientes/{clienteId} {
        allow read, write: if request.auth != null;
    }

    // Allow authenticated users to manage payments in 'pagos' subcollection
    match /nuevosclientes/{clienteId}/pagos/{pagoId} {
        allow read, write: if request.auth != null;
    }

    // Allow authenticated users to manage documents in 'documentos' subcollection
    match /nuevosclientes/{clienteId}/documentos/{documentoId} {
        allow read, write: if request.auth != null;
    }
    
     // Allow authenticated users to manage groups
    match /grupos/{grupoId} {
        allow read, write: if request.auth != null;
    }
    
     // Allow read access to Provired data for any authenticated user
    match /provired_notifications/{notificationId} {
      allow read: if request.auth != null;
      allow write: if false; // Should only be written by a trusted backend process
    }
    
    match /provired_departments/{departmentId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /provired_municipalities/{municipalityId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
     match /provired_corporations/{corporationId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
     match /provired_offices/{officeId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
     match /documentTemplates/{templateId} {
      allow read, write: if request.auth != null; // Allow admins to update templates
    }
    
    match /pagosHistorico/{pagoId} {
      allow read: if request.auth != null;
    }

    match /causante/{causanteId} {
      allow read: if request.auth != null;
    }
    
    match /parris1/{parrisId} {
      allow read: if request.auth != null;
    }
  }
}
